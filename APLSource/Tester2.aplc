                  :EndIf
              :EndIf
          :EndIf
          :If 0=≢ps.list
              rc←0
              :Return
          :EndIf
          :If (,0)≡,ps.testCaseNos
              ps.testCaseNos←¯1
          :Else
              :If 0≠≢ps.testCaseNos
