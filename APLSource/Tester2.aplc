              ps.trapFlag←ps.ref2Gui.∆n.TrapErrors.State
              ProcessGuiEvents ps.ref2Gui.∆n
          :AndIf ps.ref2Gui.∆n.∆Closed
              ⎕SIGNAL QuitEvent
          :EndIf
      :Until i≥≢ps.list
      :If ps.guiFlag
